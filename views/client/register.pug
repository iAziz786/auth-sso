extends ../includes/scaffold

block title
    title Register Client
block innerContent
  div
    h1 Register a client
    form(action=`/client/register?projectId=${project._id}`, method="post")
      input(type="text", name="name" placeholder="Application Name" required autocomplete="off")
      br
      input(type="url", name="redirectUri" placeholder="Redirect URI" required)
      br
      input(type="submit", value="Add New")
