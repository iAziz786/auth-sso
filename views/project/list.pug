include ../includes/header.pug

block title
    title All projects 
block body
  div
    h2 Here are all the projects you have created
    a(href="/project/new") &#43; Project
    
    div
      each project in projects
        a(href="/project?projectId=" + project._id)
          div(style="border: 1px solid blue; margin-top: 5px; padding: 10px")
            p
              strong #{project.name}

